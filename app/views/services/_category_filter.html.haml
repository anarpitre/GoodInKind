.sidebar_list
  %h3 Filter by Catergory
  %ul{:id => 'category_list'}
    %li
      %input{:type => "checkbox", :id => 'category_all'}/
      &nbsp;&nbsp;All (#{Service.count})
    - Category.by_services.where("service_count > 0").order("name").each do |category|
      %li
        %input{:type => "checkbox"}/
        &nbsp;
        = "#{category.name} (#{category.service_count})"
  %p
    %a{:href => '#', :id => 'category_more'}
      show all
      %img{:alt => "arrow", :src => "images/find_down_arrow.png"}/
