.sidebar_list
  %h3 Filter by Non-Profit
  %ul{:id => 'nonprofit_list'}
    %li
      %input{:type => "checkbox", :id => 'nonprofit_all'}/
      &nbsp;&nbsp;All (#{Nonprofit.count})
    - Category.by_nonprofits.where("service_count > 0").order("name").each do |category|
      %li
        %input{:type => "checkbox"}/
        &nbsp;
        = "#{truncate(category.name, :length => 25)} (#{category.service_count})"
  %p
    %a{:href => "#", :id => 'nonprofit_more'}
      show all
      %img{:alt => "arrow", :src => "images/find_down_arrow.png"}/
