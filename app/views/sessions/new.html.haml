%h2 Login 
.sign_up_form
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %h3 
      You need to signin / signup before posting the service
    %br/
    %p
      = f.label :email, :class => "sign_up_form_lbl"
      = f.email_field :email, :class => "sign_up_form_inp"
    %p
      = f.label :password, :class => "sign_up_form_lbl"
      = f.password_field :password, :class => "sign_up_form_inp"
    %p= f.submit "Sign in", :class => "sign_up_form_btn btn_form button"
  %br/
  %p.sign_up_bootm_p
    If you're not Registred User,
    = link_to "Click here", new_user_registration_path
