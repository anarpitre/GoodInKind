<h1>Listing services</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Amount</th>
    <th>Booking capacity</th>
    <th>Is scheduled</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Non profit</th>
    <th>Is public</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @services.each do |service| %>
  <tr>
    <td><%= service.title %></td>
    <td><%= service.description %></td>
    <td><%= service.amount %></td>
    <td><%= service.booking_capacity %></td>
    <td><%= service.booked_seats %></td>
    <td><%= service.is_scheduled %></td>
    <td><%= service.start_date.blank? ? '' : service.start_date.strftime('%m/%d/%Y') %></td>
    <td><%= service.end_date.blank? ? '' : service.end_date.strftime('%m/%d/%Y')  %></td>
    <td><%= service.start_time.blank? ? '' : service.start_time.strftime('%I:%M%p') %></td>
    <td><%= service.end_time.blank? ? '' : service.end_time.strftime("%I:%M%p") %></td>
    <td><%= service.non_profit_id %></td>
    <td><%= service.is_virtual %></td>
    <td><%= service.is_public %></td>
    <td><%= link_to 'Show', service %></td>
    <td><%= link_to 'Edit', edit_service_path(service) %></td>
    <td><%= link_to 'Destroy', service, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

