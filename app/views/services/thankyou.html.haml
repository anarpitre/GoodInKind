:javascript
  $(document).ready(function(){
  	$(".invite_mail").hide();
  	$(".in_mail").click(function(){
  		$(this).toggleClass("").next().slideToggle("fast");
  		$(".in_mail").toggleClass("in_mail_act");
  		return false;
  	});
  	$(".up_acc_btns_c").click(function(){
  		$(this).toggleClass("").next().slideToggle("fast");
  		$(".invite_mail").hide();
  		$(".in_mail").removeClass("in_mail_act");
  		return false;
  	});
  });


#fb-root
  %script{:src => "http://connect.facebook.net/en_US/all.js"}
  // Facebook invite friends
  // To-do -> Change the api id according to environment
  :javascript
    $(function(){
      $(".fb_send").click(function(){
        fb_intialize();
        FB.ui({
          method: 'apprequests',
          title :'GoodInKind',
          message:"Check out this service that I am offering on GoodInKind.com that benefits #{@service.nonprofit.name}. I hope that you will be able to join me and enjoy this service while supporting a worthy cause. Look forward to hearing from you."});
        });
      
      $("#fb_share").click(function(){
        fb_intialize();
        FB.ui({
          method: 'feed',
          name: "#{@service.title}",
          link: "#{services_url(@service.permalink)}",
          picture: "#{fqdn}#{@service.images.first.image.url(:thumb)}",
          caption: 'Reference Documentation',
          description: "#{@service.description}",
            });
      });
    });

      function fb_intialize() {
        FB.init({
          appId: "#{FACEBOOK[:api_key]}",
          filters :'app_non_users',
          status: true,
          cookie: false,
          // xfbml: true
        });
      }
