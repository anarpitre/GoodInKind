!!!
%html
  %head
    %title Gik
    = stylesheet_link_tag "calendrical"
    = javascript_include_tag "jquery","jquery.calendrical"
    = csrf_meta_tag
  %body
    %div{:style => "float:left"}
      = content_tag(:div, flash[:error], :id => "flash_error") if flash[:error]
      = content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice]
      = content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert]
    %div#user_nav{:style => "float:right"}
      - if user_signed_in?
        Signed in as #{current_user.email}. Not you?
        \#{link_to "Sign out", destroy_user_session_path, :method => :get}
      - else
        = link_to "Sign up", new_user_registration_path
        or #{link_to "sign in", new_user_session_path}   
    = yield
