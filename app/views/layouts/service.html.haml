- content_for :header do
  = stylesheet_link_tag "calendrical"
  = stylesheet_link_tag "jquery-ui-1.8.14.custom"
  = stylesheet_link_tag "thickbox"

  = javascript_include_tag "jquery"
  = javascript_include_tag "jquery-1.5.1.min"
  = javascript_include_tag "jquery-ui-1.8.14.custom.min"
  = javascript_include_tag "autocomplete-rails"
  = javascript_include_tag "jquery.calendrical"
  = javascript_include_tag "tooltip"
  = javascript_include_tag 'thickbox'

- unless content_for?(:layout_content)
  - content_for :layout_content do
    %body
      = content_for?(:layout_header) ? yield(:layout_header) : render('layouts/service_header')
      .container
        - if user_signed_in?
          = render 'layouts/dashboard'
        = content_for?(:body_content) ? yield(:body_content) : yield
        .clear
      = render 'layouts/footer'
= render :file => "layouts/base"
