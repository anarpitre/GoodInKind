:javascript
  jQuery(document).ready(function(){
      $(".all_review").hide();

    $('.show_review').click(function(){
      $(".review").hide();
      $(".show_review").hide();
      $(".all_review").show();
    });
    
      $("#new_review").bind("ajax:complete", function() {
        $("#review_review").val('');
      });
    
  });
%h3.comment_icon
  = image_tag('review_icon.png', :alt => "Review")
  %span Reviews
- if user_signed_in?
  - form_for(@review, :url => review_services_path,:remote => true, :html => {:class => "review_form"}) do |f| 
    = f.select :is_positive, REVIEW.collect{|b| b}
    = f.text_area :review,  :placeholder => "Write your review...", :rows => "5", :cols => "50" 
    = f.hidden_field :service_id
    = f.submit :class => "button review_form_sub"
%br
%div.review_text
  = render :partial => 'new_review'
  %p.show_review{:style => "cursor:pointer;"} Click to see more review
  %br
  %div.all_review 
    %br
    %p ALL reviews
    - @reviews.each do |review|
      %div.address_text
        %p
          = review.user.profile.first_name
          %br= review.review
%p.review_content_disc= @service.reviews.first.try(:review) 
%h3.comment_icon
  = image_tag('q_a_icon.png', :alt => "Reviews")
  %span Q&amp;A
= image_tag('comments.png', :alt => "comments", :style => "float:left;")
