.sidebar_list
  %h3 Filter by Category
  %ul{:id => 'category_list'}
    %li
      %input{:type => "checkbox", :id => 'category_all', :value => 'all'}/
      %span All (#{@services.length})
    - Category.by_services.by_category_count.each do |category|
      %li
        %input{:type => "checkbox", :id => "category_#{category.id}", :value => category.id}/
        %span= "#{category.name} (#{category.service_count})"
  %p
    - if Category.by_services.by_category_count.count > 4
      %a{:href => '#', :id => 'category_more'}
        show all
        %img{:alt => "arrow", :src => "images/find_down_arrow.png"}/
