
<script > 
  $(document).ready(function() {
    $('#dt_date_start, #dt_time_start,' +
    '#dt_date_end,   #dt_time_end').calendricalDateTimeRange();
  });
</script> 

<%= form_for @service ,:html => { :multipart => true ,:name => 'service_new'}  do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
        <% @service.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>

  <div class="field">
    <%= f.fields_for :images do |photo|  %>
      <% if photo.object.new_record? %>

        <%= photo.label :image%><br />
        <%= photo.file_field :image %>
      <%end%>
    <%end%>


  </div>
  <div class="field">

    <%= f.fields_for :images do |photo|  %>
      <% unless photo.object.new_record? %>
        <p>
        <%= link_to image_tag(photo.object.image.url(:small_thumb)), photo.object.image.url(:original) %>
        <%= photo.check_box :_destroy %>
      <%end%>
    <%end%>

  </div>
  <div class="field">
    <%= f.label :is_virtual %><br />
    <%= f.check_box :is_virtual ,:name => 'virtuallocation',:onclick => 'virtualtrue();'%>
  </div>

  <div class="field">
    <%= f.fields_for :location do |location| %>
      <%= location.label :address  %>
      <%= location.text_field :address%>
    <%end%>
  </div>

  <div class="field">
      <%= f.label :non_profit_id %><br />
      <%= f.select(:non_profit_id,NonProfit.all.collect{|p| [[p.name,p.location.blank? ? '' : p.location.city].join(','),p.id]},{:include_blank => 'None'}) %>
  </div>

  <div class="field">
    <%= f.label :booking_capacity %><br />
    <%= f.text_field :booking_capacity %>
  </div>
  <div class="field">
    <%= f.label :is_scheduled %><br />
    <%= f.check_box :is_scheduled,:name => 'schedule', :onclick => 'scheduletrue()' %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.text_field :start_date,:value => (@service.start_date.blank? ? '' : @service.start_date.strftime('%m/%d/%Y')),:id => 'dt_date_start'%>
  </div>
  <div class="field">
    <%= f.label :start_time %><br />
    <%= f.text_field :start_time, :value => (@service.start_time.blank? ? '' : @service.start_time.strftime('%I:%M:%p')), :id => 'dt_time_start' %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.text_field :end_date, :value => (@service.end_date.blank? ? '' : @service.end_date.strftime('%m/%d/%Y')),:id => 'dt_date_end' %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br />
    <%= f.text_field :end_time, :value => (@service.end_time.blank? ? '' : @service.end_time.strftime('%I:%M:%p')),:id => 'dt_time_end' %>
  </div>
  <div class="field">
    <%= f.label :is_public %><br />
    <%= f.check_box :is_public %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
