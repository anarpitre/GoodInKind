#tab1.tab_content
  .up_my_profile
    .up_my_profile_left
      .mypic
        %img{:alt => "MyPic", :src => "images/mypic.jpg"}/
      .my_stats
        %h2 GoodInKind Stats
        %ul
          %li
            Total Services Offered:
            %span= @profile.user.services.size
          %li
            Total Purchased:
            %span 0
          %li
            Total Amount Raised:
            %span $0
          %li
            Total Time Donated:
            %span 0
          %li
            \% Positive Reviews:
            %span -
          %li
            Total Reviews:
            %span 0
    .up_my_profile_right
      %h2.my_name
        = get_user_name
        %span
          = link_to image_tag("/images/edit_icon.jpg"), edit_profile_path(current_user)
          Edit Profile
      %p.my_pro_p
        %label.my_pro_lbl Sex:
        %span.my_pro_spn= get_gender
      %p.my_pro_p
        %label.my_pro_lbl Location:
        %span.my_pro_spn= !@profile.location.blank? ? @profile.location.address : "--"
      %p.my_pro_p
        %label.my_pro_lbl Email:
        %span.my_pro_spn
          = get_user_email
          %span.my_pro_not_pl
            Not-Public
            %b (?)
      %p.my_pro_p
        %label.my_pro_lbl Website:
        %span.my_pro_spn= @profile.website
      %p.my_pro_p
        %label.my_pro_lbl About Me:
        %span.my_pro_spn= @profile.about_me
      .my_pro_sm
        %label.my_pro_lbl Follow Me:
        %ul
          %li
            %a{:href => "http://www.twitter.com/#!/#{@profile.twitter}"}
          %li
            %a.my_sm_facebook{:href => "http://www.facebook.com/#{@profile.facebook}"}
          %li
            %a.my_sm_linked{:href => "http://www.linkedin.com/#{@profile.linkedin}"}
