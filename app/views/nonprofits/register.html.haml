= form_for @non_profit,:as => :non_profit,:url => nonprofits_path, :html => { :multipart => true, :method => :post} do |f| 
  -if @non_profit.errors.any?
    %h2= "#{pluralize(@non_profit.errors.count, "error")} prohibited this service from being saved:"
    %ul
      -@non_profit.errors.full_messages.each do |msg|
        %li= msg
  %h1 
    Organization Information

  = f.label :EIN
  = f.text_field :EIN
  %br
  = f.label :name
  = f.text_field :name
  %br
  = f.label :logo
  = f.file_field :photo
  %br
  %h3= "Account Information"
 
  = f.label :username
  = f.text_field :username
  %br
  = f.label :password
  = f.password_field :password
  %br
  = f.label :password_confirmation
  = f.password_field :password_confirmation
  %br
  
  %h3= "Location Information"
  = f.fields_for :location do |location|
    = location.label :address
    = location.text_field :address
    %br
    = location.label :city
    = location.text_field :city
    %br
    = location.label :state
    = location.text_field :state
    %br
    = location.label :country
    = location.text_field :country
    %br


  %h3= "Contact Information"

  = f.label :uuid
  = f.text_field :uuid 
  %br
  = f.label :contact_name
  = f.text_field :contact_name
  %br
  = f.label :email
  = f.text_field :email
  %br
  = f.label :description
  = f.text_area :description
  %br
  = f.label :phone_number
  = f.text_field :phone_number
  %br
  = f.submit 'Register'

