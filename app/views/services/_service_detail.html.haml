%h2.services_h2
  = @service.title
  %em for
  = @service.nonprofit.name
/ Logged Left
.logged_left
  .logged_top
    .logged_gallery
      .logged_pics
        = image_tag get_service_image('medium',@service)
      - if @service.images.count > 1
        .logged_pics_bottom
          %ul
            %li
              %a{:href => "#"} &lt;
            - i = 1
            - @service.images.count.times do
              %li
                %a.pic_active{:href => "#"} #{i}
              - i += 1
            %li
              %a{:href => "#"} &gt;
        %span.report_abuse
          %a{:href => "#"} Report Abuse
    .logged_right
      .logged_shar
        %span.st_plusone_hcount
        %span.st_twitter_hcount{:displaytext => "Tweet"}
        %span.st_facebook_hcount{:displaytext => "Facebook"}
        :javascript
          var switchTo5x=true;
        %script{:src => "http://w.sharethis.com/button/buttons.js"}
        :javascript
          stLight.options({publisher:'d7205d3e-dbdd-455c-a856-b25ec435dd41'});
      .services_price
        %span.req_text Requested Donation
        %span.price_text= "$"  + @service.amount.to_i.to_s 
      = link_to "Take It", new_service_booking_path(@service), :class => 'button take_it'
  .services_content
    = render :partial => "service_description"
    = render :partial => "service_review"
    .clear
/ #End Logged Left
