%h2.offer_form_h2
  Request
.offer_form
  = form_for @request, :builder => JoshForm, :html => {:multipart => true} do |f|
    - if @request.errors.any?
      #error_explanation
        %h2
          = pluralize(@request.errors.count, "error")
          prohibited this post from being saved:
        %ul
          - @request.errors.full_messages.each do |msg|
            %li= msg
    .setp_box
      %h3.setp_box_heading
        %span Step 1:
        Describe the request or experience you want 
      = f.text_field :title, :hint => "Give short and sweet Title to your Service"
      = f.text_area :description, :class => 'input_area', :hint => "Give detail Description of your Service"
      = f.text_field :email, :hint => "Give short and sweet Title to your Service"
      = f.fields_for :location do |loc|
        = loc.text_field :address, :class => "input_half"
    .input_post_div
      = f.submit "Post It", :class => "btn_form button form_post_btn"
