%h2.offer_form_h2
  Request
%a.bro_req_btn{:href => requests_path} Browse Requests
.offer_form
  = form_for @request, :builder => JoshForm, :html => {:multipart => true} do |f|
    .setp_box
      %h3.setp_box_heading
        %span Step 1:
        Describe the request or experience you want 
      = f.text_field :title, :hint => "Give short and sweet Title to your requested service"
      = f.text_area :description, :class => 'input_area', :hint => "Give detail Description of your requested service"
      = f.select :category_id, Category.by_services.collect{|b| [ b[:name] , b[:id] ]}, {}, :class => "input_select", :label => "Category"
      = f.text_field :email,  :hint => "Your email-id to inform you when this request is offered"
      = f.fields_for :location do |loc|
        = loc.text_field :address, :class => "input_half", :hint => "Preferred location of service"
    .input_post_div
      = f.submit "Post It", :class => "btn_form button form_post_btn"
