.dashboard_mini
  %span.dm_user
    Welcome #{current_user.email}, you are an
    %b Agent of Change
  %span.dm_price
    %img{:alt => "dot", :src => "/images/dot_dash.png"}/
    %b $100
  %span.dm_price.dm_time
    %img{:alt => "time", :src => "/images/dash_time.png"}/
    %b 24h
  %ul.dm_nav
    %li
      = link_to "Profile", profiles_path
    %li
      %a{:href => "#"} My Services
    %li
      = link_to "Logout", destroy_user_session_path, :method => :get
  %span.dm_network
    %img{:alt => "network", :src => "/images/network_icon.png"}/
    %strong.count 3
  %span.dm_mail
    %img{:alt => "mail", :src => "/images/mail_icon.png"}/
    %strong.count.mail_c 3
  %span.dm_st
  %span
